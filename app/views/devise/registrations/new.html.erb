<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">新規プロトタイプ投稿</h2>
        <%# 部分テンプレートでフォームを表示する %>
        <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>

    
    <div class="field">
        <%= f.label :"メールアドレス" %><br />
        <%= f.email_field :"email" %>
      </div>

    <div class="field">
        <%= f.label :"パスワード"%> <em>(6 characters maximum)</em><br />
        <%= f.password_field :password, autofocus: true %>
      </div>

 
      <div class="field">
        <%= f.label :"パスワード再入力" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :"ユーザー名" %><br />
        <%= f.text_field :name, autocomplete: "off" %>
      </div>

          <div class="field">
        <%= f.label :"プロフィール" %><br />
        <%= f.text_field :profile, autocomplete: "off" %>
      </div>

          <div class="field">
        <%= f.label :"所属" %><br />
        <%= f.text_field :occupation, autocomplete: "off" %>
      </div>

          <div class="field">
        <%= f.label :"役職" %><br />
        <%= f.text_field :position, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
</div>
